{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/api/v0/product/{**catch-all}"
        }
      },
      "cartRoute": {
        "ClusterId": "cartCluster",
        "Match": {
          "Path": "/api/v0/cart/{**catch-all}"
        }
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/api/v0/order/{**catch-all}"
        }
      },
      "abcAdapterRoute": {
        "ClusterId": "abcAdapterCluster",
        "Match": {
          "Path": "/api/v0/abcadapter/{**catch-all}"
        }
      },
      "cdeAdapterRoute": {
        "ClusterId": "cdeAdapterCluster",
        "Match": {
          "Path": "/api/v0/cdeadapter/{**catch-all}"
        }
      },
      "productSwagger": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/swagger/product/swagger.json"
        },
        "Transforms": [
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "cartSwagger": {
        "ClusterId": "cartCluster",
        "Match": {
          "Path": "/swagger/cart/swagger.json"
        },
        "Transforms": [
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "orderSwagger": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/swagger/order/swagger.json"
        },
        "Transforms": [
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "abcSwagger": {
        "ClusterId": "abcAdapterCluster",
        "Match": {
          "Path": "/swagger/abcadapter/swagger.json"
        },
        "Transforms": [
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "cdeSwagger": {
        "ClusterId": "cdeAdapterCluster",
        "Match": {
          "Path": "/swagger/cdeadapter/swagger.json"
        },
        "Transforms": [
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productDestination": {
            "Address": "https://localhost:7120/"
          }
        }
      },
      "cartCluster": {
        "Destinations": {
          "cartDestination": {
            "Address": "https://localhost:5003/"
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderDestination": {
            "Address": "https://localhost:7104/"
          }
        }
      },
      "abcAdapterCluster": {
        "Destinations": {
          "abcAdapterDestination": {
            "Address": "https://localhost:5007/"
          }
        }
      },
      "cdeAdapterCluster": {
        "Destinations": {
          "cdeAdapterDestination": {
            "Address": "https://localhost:5009/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
